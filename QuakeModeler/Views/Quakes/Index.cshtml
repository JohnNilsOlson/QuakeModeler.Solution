@{
  Layout = "_Layout";
}

@model QuakeModeler.Models.Quake;
@using QuakeModeler.Models;

<div class="navigation">
  <button class="btn btn-secondary" type="button" onclick="location.href='@Url.Action("Index", "Home")';" class="btn btn-outline-dark">Home</button>
  <button class="btn btn-secondary" type="button" onclick="location.href='@Url.Action("History", "Quakes")';" class="btn btn-outline-dark">History</button>
  <button class="btn btn-secondary" type="button" onclick="location.href='@Url.Action("Resources", "Quakes")';" class="btn btn-outline-dark">Resources</button>
</div>
<hr />

<h4><img class="icon" src='@Url.Content("~/assets/images/EQRunningMan.png")'>Enter your Location:</h4>
@using(Html.BeginForm())
{
  <div class="form-group">
    @Html.TextBox("placeName", null, new { @class="form-control" })
  </div>
  <button class="btn btn-secondary" type="submit" class="btn btn-outline-dark">Search</button>
}